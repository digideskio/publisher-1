<fieldset class='form-horizontal'>
    
    <%= f.input :course, :collection => Artefact.where(:kind => "course").to_a.map {|p| [p.name, p.slug]}, :as => :select, :input_html => {:class => "span7"}, :include_blank => "Please select" %>
    
    <%= f.input :date,
                :hint => "In format yyyy-mm-dd hh:mm (24 hour clock)",
                :input_html => { :class => 'span7' , :disabled => @resource.published?, 'data-behaviour' => 'datepicker', :value => @resource.date.try(:strftime, "%Y-%m-%d %H:%M") } %>

    <%= f.input :end_date,
                :hint => "In format yyyy-mm-dd hh:mm (24 hour clock)",
                :input_html => { :class => 'span7' , :disabled => @resource.published?, 'data-behaviour' => 'datepicker', :value => @resource.end_date.try(:strftime, "%Y-%m-%d %H:%M") } %>
                
    <%= f.input :location,
                :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

    <%= f.input :url,
                :as => :url,
                :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

    <%= f.input :price,
                :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
 
    <%= render partial: 'admin/shared/markdown_field', locals: { type: :description, form: f, :required => true }%>

    <%= f.input :trainers, :collection => Artefact.where(:kind => "person").to_a.map {|p| [p.name, p.slug]}, :as => :check_boxes %>

</fieldset>